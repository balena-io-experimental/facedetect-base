FROM pcarranzav/resin-multivisor:201512030250

ENV LISTEN_PORT 48485
ENV DOCKER_SOCKET /var/run/docker.sock
ENV MIXPANEL_TOKEN %MIXPANEL_TOKEN%
ENV MULTIVISOR_API_KEY %MULTIVISOR_API_KEY%
ENV PUBNUB_SUBSCRIBE_KEY %PUBNUB_SUBSCRIBE_KEY%
ENV PUBNUB_PUBLISH_KEY %PUBNUB_PUBLISH_KEY%
ENV VPN_ENDPOINT vpn.resin.io

ENV MULTIVISOR_DEVICE_TYPE intel-nuc
ENV MULTIVISOR_USER_ID 1330
ENV MULTIVISOR_USERNAME gh_pcarranzav

ENV MULTIVISOR_PRELOADED_APPS 0
ENV MULTIVISOR_APP_IDS %MULTIVISOR_APP_IDS%

RUN apk add --update ffmpeg

COPY start.sh /
RUN chmod +x /start.sh

CMD /start.sh
